<h1>Sales</h1>
<hr />

<table width = "1000" cellpadding = "5" cellspacing = "5" bgcolor = "lightyellow">
  <thead>
    <th>Employee Name</th>
    <th>Customer Name</th>
    <th>Account Number</th>
    <th>Product</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Quantity</th>
    <th>Invoice #</th>
    <th>Billing Frequency</th>
  </thead>

  <tbody>
    <tr>
      <td> <%= @sale.employee.name %> </td>
      <td> <%= @sale.customer.name %> </td>
      <td> <%= @sale.customer.account_no %> </td>
      <td> <%= @sale.product.name %> </td>
      <td> <%= @sale.sale_date %> </td>
      <td> <%= @sale.sale_amount %> </td>
      <td> <%= @sale.units_sold %> </td>
      <td> <%= @sale.invoice_no %> </td>
      <td> <%= @sale.frequency.name %> </td>
    </tr>
  </tbody>

</table>